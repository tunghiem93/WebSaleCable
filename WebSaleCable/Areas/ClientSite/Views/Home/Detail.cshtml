@model WebSaleCable.Shared.Model.Product.ProductDetailViewModels
@using WebSaleCable.Shared
@{
    Layout = "~/Areas/ClientSite/Views/Shared/_Layout.cshtml";
}


<div class="product-template-default single single-product postid-916 wp-custom-logo woocommerce woocommerce-page right-sidebar woocommerce-active">
    <link href="@Url.Content("~/Content/photoswipe.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/default-skin.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/styledetail_child.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/woocommerce.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/styledetail.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.2.0.min.js")"></script>
    <script type='text/javascript'>
        /* <![CDATA[ */
        var the_lmp_js_data = { "type": "more_button", "use_mobile": "", "mobile_type": "", "mobile_width": "", "is_AAPF": "", "buffer": "50", "load_image": "<div class=\"lmp_products_loading\"><i class=\"fa fa-spinner lmp_rotate\"><\/i><\/div>", "load_img_class": ".lmp_products_loading", "load_more": "<div class=\"lmp_load_more_button\"><a class=\"lmp_button btn-load-more\" style=\"background-color: ; color: ; font-size: px;padding: px px px px;\" href=\"#load_next_page\">Xem Th\u00eam<\/a><\/div>", "lazy_load": "", "end_text": "", "javascript": { "before_update": "", "after_update": "" }, "products": "ul.products", "item": "li.product", "pagination": ".woocommerce-pagination", "next_page": ".woocommerce-pagination a.next" };
/* ]]> */
    </script>
    <script src="@Url.Content("~/Scripts/load_products.js")"></script>
    <script src="@Url.Content("~/Scripts/customer_frontend.js")"></script>

    <script type='text/javascript'>
        /* <![CDATA[ */
        var aamLocal = { "nonce": "79e51e855c", "ajaxurl": "https:\/\/bagi.com.vn\/wp-admin\/admin-ajax.php" };
/* ]]> */
    </script>
    <div id="page" class="hfeed site">
        <div id="content" class="site-content" tabindex="-1">
            <div class="col-full">
                <nav class="woocommerce-breadcrumb"><a href="/Home/Index">Trang chủ</a><span class="breadcrumb-separator"> / </span><a href="javascript:void(0)">@Model.Product.Name</a></nav><div class="woocommerce"></div>
                <div id="primary" class="content-area">
                    <main id="main" class="site-main" role="main">
                        <div id="product-916" class="post-916 product type-product status-publish has-post-thumbnail product_cat-cap-sac-bagi-cables product_cat-cap-sac-usb-c first instock shipping-taxable purchasable product-type-simple">
                            <div class="woocommerce-product-gallery woocommerce-product-gallery--with-images woocommerce-product-gallery--columns-4 images" data-columns="4" style="opacity: 0; transition: opacity .25s ease-in-out;">
                                @if (Model.Product != null && Model.Product.ListImg != null && Model.Product.ListImg.Any())
                                {
                                    <figure class="woocommerce-product-gallery__wrapper">
                                        @foreach (var itemImg in Model.Product.ListImg)
                                        {
                                            <div data-thumb="@itemImg.ImageURL" class="woocommerce-product-gallery__image">
                                                <a href="@itemImg.ImageURL">
                                                    <img width="600" height="450" style="width:100% !important" src="@itemImg.ImageURL" class="attachment-shop_single size-shop_single wp-post-image" alt="Cáp sạc nhựa nhanh chống đứt type c CF10" title="cáp sạc nhựa nhanh chống đứt type c cf10" data-caption="" data-src="@itemImg.ImageURL" data-large_image="@itemImg.ImageURL" data-large_image_width="600" data-large_image_height="450" srcset="@itemImg.ImageURL 600w, @itemImg.ImageURL 300w, @itemImg.ImageURL 450w" sizes="(max-width: 600px) 100vw, 600px" />
                                                </a>
                                            </div>
                                        }
                                    </figure>
                                }
                                
                            </div>

                            <div class="summary entry-summary">
                                <h1 class="product_title entry-title">@Model.Product.Name &#8211;</h1>
                                <div class='bagi_price_wp'>
                                    <p class='price_custom'>
                                        <span class='bagi_price'>
                                            <b>Giá cả:</b> @Model.Product.Price
                                        </span>
                                        <span class='bagi_price_ bagi_price_in_stock'>Còn Hàng</span>
                                    </p>
                                </div>

                                <p class="price">
                                    <span class="woocommerce-Price-amount amount">
                                        @string.Format("{0}",string.IsNullOrEmpty(Model.Product.Price) ? "0" : Model.Product.Price)&nbsp;
                                        <span class="woocommerce-Price-currencySymbol">VNĐ</span>
                                    </span>
                                </p>

                                @*<span class='sku no-rating-sku'><b>Mã sản phẩm:</b> CB-CF10</span>*@
                                <div class="woocommerce-product-details__short-description">
                                    <p>@Model.Product.Description</p>
                                    <p>Sản xuất tại Việt Nam</p>
                                    @if (!string.IsNullOrEmpty(Model.Product.GuaranteePeriod))
                                    {
                                        <p>Bảo hành @Model.Product.GuaranteePeriod tháng lỗi 1 đổi 1</p>
                                    }
                                    
                                </div>
                            </div>

                            <div class="clear hr"></div>

                            <section class="related products">
                                <b class="header">Sản phẩm tương tự</b>
                                @if (Model.ListProduct != null && Model.ListProduct.Any())
                                {
                                    <ul class="products">
                                        @foreach (var item in Model.ListProduct)
                                        {

                                        <li class="post-769 product type-product status-publish has-post-thumbnail product_cat-cap-sac-bagi-cables product_cat-cap-sac-lightning-cables first instock shipping-taxable purchasable product-type-simple">
                                            <a href="/Home/Detail/@item.ID" class="woocommerce-LoopProduct-link woocommerce-loop-product__link">
                                                <img width="300" height="300" src="@item.ImageURL" class="attachment-shop_catalog size-shop_catalog wp-post-image" alt="dây cáp hộp bagi lightning ai15" srcset="@item.ImageURL 300w, @item.ImageURL 180w" sizes="(max-width: 300px) 100vw, 300px" /><h3 class="woocommerce-loop-product__title">@item.Name</h3>
                                                <span class="price"><span class="woocommerce-Price-amount amount">@string.Format("{0}",string.IsNullOrEmpty(item.Price) ? "0" : item.Price)&nbsp;<span class="woocommerce-Price-currencySymbol">VNĐ</span></span></span>
                                            </a>						
                                            <a class='btn-xemchitiet' href='/Home/Detail/@item.ID'>Xem Chi Tiết</a>
                                        </li>

                                        }
                                    </ul>
                                }


                            </section>
                        </div><!-- #product-916 -->
                    </main><!-- #main -->
                </div><!-- #primary -->
            </div><!-- .col-full -->
        </div><!-- #content -->
    </div>

    <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="pswp__bg"></div>
        <div class="pswp__scroll-wrap">
            <div class="pswp__container">
                <div class="pswp__item"></div>
                <div class="pswp__item"></div>
                <div class="pswp__item"></div>
            </div>
            <div class="pswp__ui pswp__ui--hidden">
                <div class="pswp__top-bar">
                    <div class="pswp__counter"></div>
                    <button class="pswp__button pswp__button--close" aria-label="Đóng (Esc)"></button>
                    <button class="pswp__button pswp__button--share" aria-label="Chia sẻ"></button>
                    <button class="pswp__button pswp__button--fs" aria-label="Bật/tắt chế độ toàn màn hình"></button>
                    <button class="pswp__button pswp__button--zoom" aria-label="Phóng to/ thu nhỏ"></button>
                    <!-- Preloader demo http://codepen.io/dimsemenov/pen/yyBWoR -->
                    <!-- element will get class pswp__preloader--active when preloader is running -->
                    <div class="pswp__preloader">
                        <div class="pswp__preloader__icn">
                            <div class="pswp__preloader__cut">
                                <div class="pswp__preloader__donut"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                    <div class="pswp__share-tooltip"></div>
                </div>
                <button class="pswp__button pswp__button--arrow--left" aria-label="Ảnh trước (mũi tên trái)"></button>
                <button class="pswp__button pswp__button--arrow--right" aria-label="Ảnh tiếp (mũi tên phải)"></button>
                <div class="pswp__caption">
                    <div class="pswp__caption__center"></div>
                </div>
            </div>
        </div>
    </div>
    <link href="@Url.Content("~/Content/productdetail.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/scripts.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.zoom.min.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.flexslider-min.js")"></script>

    <script src="@Url.Content("~/Scripts/photoswipe.min.js")"></script>

    <script src="@Url.Content("~/Scripts/photoswipe-ui-default.min.js")"></script>

