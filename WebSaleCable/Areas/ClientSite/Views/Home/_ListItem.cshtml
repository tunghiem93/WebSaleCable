@model WebSaleCable.Shared.Model.Product.ProductViewModels
    @using WebSaleCable.Shared
<div class="category-featured featured1">
    <div class="product-featured clearfix">
        <div class="row">
            <div class="col-sm-12 col-right-tab">
                <div class="product-featured-tab-content">
                    @if (Model.ListProduct != null && Model.ListProduct.Any())
                    {
                        <ul class="product-list row">
                            @foreach (var item in Model.ListProduct)
                            {
                                <li class="col-sm-3">
                                    <div class="right-block">
                                        <h5 class="product-name"><a href="/Home/ProductDetail/@item.ID">@item.Name</a></h5>
                                        <div class="content_price">
                                            <span class="price product-price">@item.Price</span>
                                        </div>
                                    </div>
                                    <div class="left-block">
                                        <a href="/Home/ProductDetail/@item.ID"><img class="img-responsive" alt="product" src="@item.ImageURL" /></a>
                                        <div class="add-to-cart">
                                            <a class="add-to-car" href="/Home/ProductDetail/@item.ID">Chi tiết</a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else {
                        <p>Không có sản phẩm nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

